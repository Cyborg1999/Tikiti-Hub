<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/mini_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="180sp"
            android:src="@drawable/james_bond_poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/mini_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mini_movie_title"
            android:textSize="12sp"
            android:fontFamily="@font/lato"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/mini_movie_poster"
            app:layout_constraintStart_toStartOf="@id/mini_movie_poster"
            app:layout_constraintEnd_toEndOf="@id/mini_movie_poster"
            android:layout_marginTop="5sp"
            android:textAllCaps="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_duration"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/mini_movie_title"
            app:layout_constraintStart_toStartOf="@id/mini_movie_title"
            />

</androidx.constraintlayout.widget.ConstraintLayout>