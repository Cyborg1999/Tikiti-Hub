<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="5dp"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    >

    <ImageView
        android:id="@+id/movie_item_poster"
        android:layout_width="wrap_content"
        android:layout_height="175sp"
        android:adjustViewBounds="true"
        android:src="@drawable/james_bond_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:transitionName="sharedName"
        />

    <TextView
        android:id="@+id/movie_item_title"
        android:layout_width="wrap_content"
        android:layout_height="15sp"
        android:text="@string/movie_title"
        android:textSize="12sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/lato"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_item_poster" />

    <TextView
        android:id="@+id/movie_running_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_duration"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/movie_item_title"
        app:layout_constraintStart_toStartOf="@id/movie_item_title"
        />
</androidx.constraintlayout.widget.ConstraintLayout>