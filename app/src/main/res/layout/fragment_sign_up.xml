<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SignUpFragment"
    android:background="#fff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50sp">

        <TextView
            android:id="@+id/sign_up_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="40sp"
            android:padding="18sp"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:layout_marginTop="50sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/sign_up_errors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:layout_marginTop="5sp"
            android:padding="5sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/sign_up_first_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_errors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/sign_up_first_name_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_first_name_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_first_name_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_first_name_text_view"
            android:layout_marginTop="45sp"
            android:background="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/sign_up_first_name"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="@id/sign_up_first_name_text_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/sign_up_first_name_text_view"
            app:layout_constraintTop_toBottomOf="@id/sign_up_first_name_text_view" />

        <TextView
            android:id="@+id/sign_up_last_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_first_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/sign_up_last_name_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_last_name_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_last_name_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_last_name_text_view"
            android:layout_marginTop="45sp"
            android:background="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/sign_up_last_name"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:inputType="textCapWords"
            app:layout_constraintTop_toBottomOf="@id/sign_up_last_name_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_last_name_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_last_name_text_view"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/sign_up_email_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_last_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/sign_up_email_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_email_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_email_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_email_text_view"
            android:layout_marginTop="45sp"
            android:background="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/sign_up_email"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/sign_up_email_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_email_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_email_text_view"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/sign_up_password_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/sign_up_password_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_password_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_password_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_password_text_view"
            android:layout_marginTop="45sp"
            android:background="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/sign_up_password_text_view"
            app:layout_constraintStart_toStartOf="@id/sign_up_password_text_view"
            app:layout_constraintEnd_toEndOf="@id/sign_up_password_text_view"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="0dp"
            android:layout_height="80sp"
            android:text="SIGN UP"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@drawable/movie_ticket"
            app:layout_constraintTop_toBottomOf="@id/sign_up_password"
            app:layout_constraintStart_toStartOf="@id/sign_up_password"
            app:layout_constraintEnd_toEndOf="@id/sign_up_password"
            android:layout_marginTop="24sp"
            />

        <TextView
            android:id="@+id/log_in_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="or Login?"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>