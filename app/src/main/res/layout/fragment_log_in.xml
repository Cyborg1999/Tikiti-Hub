<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LogInFragment"
    android:background="#fff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50sp">

        <TextView
            android:id="@+id/log_in_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="40sp"
            android:padding="18sp"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:layout_marginTop="100sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/log_in_errors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="5sp"
            android:padding="5sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/log_in_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/log_in_email_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/log_in_errors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/log_in_email_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/log_in_email_text_view"
            app:layout_constraintStart_toStartOf="@id/log_in_email_text_view"
            app:layout_constraintEnd_toEndOf="@id/log_in_email_text_view"
            android:layout_marginTop="45sp"
            android:background="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/log_in_email"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/log_in_email_text_view"
            app:layout_constraintStart_toStartOf="@id/log_in_email_text_view"
            app:layout_constraintEnd_toEndOf="@id/log_in_email_text_view"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/log_in_password_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/log_in_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/log_in_password_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/log_in_password_text_view"
            app:layout_constraintStart_toStartOf="@id/log_in_password_text_view"
            app:layout_constraintEnd_toEndOf="@id/log_in_password_text_view"
            android:layout_marginTop="45sp"
            android:background="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/log_in_password"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/log_in_password_text_view"
            app:layout_constraintStart_toStartOf="@id/log_in_password_text_view"
            app:layout_constraintEnd_toEndOf="@id/log_in_password_text_view"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/log_in_btn"
            android:layout_width="0dp"
            android:layout_height="80sp"
            android:text="Login"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@drawable/movie_ticket"
            app:layout_constraintTop_toBottomOf="@id/log_in_password"
            app:layout_constraintStart_toStartOf="@id/log_in_password"
            app:layout_constraintEnd_toEndOf="@id/log_in_password"
            android:layout_marginTop="24sp"
            />

        <TextView
            android:id="@+id/sign_up_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="or Sign Up?"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="24sp"
            android:layout_marginHorizontal="30sp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/log_in_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>